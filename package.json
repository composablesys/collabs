{
  "name": "compoventuals-metapackage",
  "version": "0.1.0",
  "description": "CRDTs designed compositionally (meta-package)",
  "author": "Compoventuals contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/composablesys/compoventuals/issues"
  },
  "homepage": "https://github.com/composablesys/compoventuals#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/composablesys/compoventuals.git"
  },
  "keywords": [
    "crdts"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pkg-ok": "^2.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^2.7.1",
    "ts-node": "^10.1.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.5"
  },
  "comment": "workspaces must be in build order, and workspace names must not include spaces or otherwise fail to be proper bash args",
  "workspaces": [
    "main",
    "json",
    "json-opt",
    "tensor-average",
    "ws-client",
    "ws-server",
    "webrtc-client",
    "webrtc-server",
    "matrix-widget",
    "benchmarks",
    "demo"
  ],
  "scripts": {
    "start": "npm start --prefix demo",
    "build": "./foreach-workspace.sh \"npm run build --prefix\"",
    "test": "./foreach-workspace.sh \"npm run test --prefix\"",
    "fix": "./foreach-workspace.sh \"npm run fix --prefix\"",
    "clean": "./foreach-workspace.sh \"npm run clean --prefix\"",
    "reset": "rimraf */package-lock.json */node_modules package-lock.json node_modules"
  },
  "engines": {
    "node": "15.6"
  }
}
