{
  "author": "Collabs contributors",
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "rimraf": "^2.7.1"
  },
  "comment": "workspaces must be in build order, and workspace names must not include spaces or otherwise fail to be proper bash args",
  "workspaces": [
    "core",
    "crdts",
    "collabs",
    "container",
    "ws-client",
    "ws-server",
    "matrix-widget",
    "container-testing-server",
    "template-custom-type",
    "template-container",
    "template-app",
    "demos/types/number",
    "demos/types/resettable-counter",
    "demos/apps/aspace",
    "demos/apps/counter",
    "demos/apps/group",
    "demos/apps/horse-color-genetics",
    "demos/apps/minesweeper",
    "demos/apps/plaintext",
    "demos/apps/rich-text",
    "demos/apps/whiteboard",
    "demos/apps/selector",
    "demos/apps/server",
    "benchmarks",
    "docs"
  ],
  "workspaceLists": {
    "publish": [
      "core",
      "crdts",
      "collabs",
      "container",
      "ws-client",
      "ws-server",
      "matrix-widget",
      "container-testing-server"
    ],
    "publishNoTypedoc": [
      "container-testing-server"
    ],
    "noTest": [
      "template-container",
      "template-app",
      "docs",
      "demos/apps/counter"
    ],
    "noFix": [
      "template-container",
      "template-app",
      "template-custom-type",
      "docs",
      "demos/apps/counter"
    ],
    "demoApps": [
      "demos/apps/aspace",
      "demos/apps/counter",
      "demos/apps/group",
      "demos/apps/horse-color-genetics",
      "demos/apps/minesweeper",
      "demos/apps/plaintext",
      "demos/apps/rich-text",
      "demos/apps/whiteboard",
      "demos/apps/selector",
      "demos/apps/server"
    ]
  },
  "scripts": {
    "start": "npm start --prefix demos/apps/server",
    "build": "node foreach-workspace.js all \"npm run build -w\"",
    "buildDemoServer": "node foreach-workspace.js publish \"npm run build -w\" && node foreach-workspace.js demoApps \"npm run build -w\"",
    "heroku-postbuild": "npm run buildDemoServer",
    "buildForTypedoc": "node foreach-workspace.js publish -s publishNoTypedoc \"npm run build -w\"",
    "test": "node foreach-workspace.js all -s noTest \"npm run test -w\"",
    "fix": "node foreach-workspace.js all -s noFix \"npm run fix -w\"",
    "version": "bash version_script.sh",
    "publish": "node foreach-workspace.js publish \"npm publish -w\"",
    "clean": "node foreach-workspace.js all \"npm run clean -w\"",
    "reset": "rimraf **/package-lock.json **/node_modules"
  },
  "engines": {
    "node": "18.x"
  }
}
