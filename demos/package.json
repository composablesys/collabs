{
  "name": "compoventuals-demos",
  "version": "0.1.0",
  "description": "CRDTs designed compositionally (demo webapps)",
  "author": "Compoventuals contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/composablesys/compoventuals/issues"
  },
  "homepage": "https://github.com/composablesys/compoventuals#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/composablesys/compoventuals.git"
  },
  "keywords": [
    "crdts"
  ],
  "dependencies": {
    "tslib": "^2.0.1",
    "@types/quill": "^2.0.8",
    "quill": "^1.3.7",
    "compoventuals": "^0.1.0",
    "compoventuals-matrix-widget": "^0.1.0",
    "compoventuals-ws-client": "^0.1.0",
    "compoventuals-ws-server": "^0.1.0",
    "compoventuals-webrtc-client": "^0.1.0",
    "compoventuals-webrtc-server": "^0.1.0",
    "express": "^4.17.1",
    "matrix-widget-api": "^0.1.0-beta.15",
    "protobufjs": "~6.10.1",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "mkdirp": "^1.0.4",
    "typescript": "^4.3.5",
    "copy-webpack-plugin": "^6.4.1",
    "@types/copy-webpack-plugin": "^6.4.0",
    "terser-webpack-plugin": "^3.1.0",
    "ts-loader": "^7.0.5",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.11",
    "pkg-ok": "^2.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^2.7.1",
    "@types/express": "^4.17.7",
    "@types/jquery": "^3.5.5",
    "@types/uuid": "^3.4.0",
    "@types/webpack": "^4.41.26",
    "@types/webpack-env": "^1.15.2",
    "@types/ws": "^7.2.6"
  },
  "scripts": {
    "start": "node build/server/demo_server.js",
    "build": "npm-run-all build:*",
    "build:site": "npm-run-all build:site:*",
    "build:site:protobuf": "npm-run-all build:site:protobuf:prepare build:site:protobuf:js build:site:protobuf:ts",
    "build:site:protobuf:prepare": "mkdirp generated/site",
    "build:site:protobuf:js": "pbjs -t static-module -w commonjs -o generated/site/proto_compiled.js `find src/site -name '*.proto'`",
    "build:site:protobuf:ts": "pbts -o generated/site/proto_compiled.d.ts generated/site/proto_compiled.js",
    "build:site:webpack": "webpack",
    "build:server": "tsc --build tsconfig.server.json",
    "test": "npm-run-all test:*",
    "test:pkg": "pkg-ok",
    "test:format": "prettier --check .",
    "fix": "npm-run-all fix:*",
    "fix:format": "prettier --write .",
    "clean": "rimraf build generated"
  },
  "files": [
    "/build"
  ],
  "directories": {
    "test": "test"
  }
}
