{
  "name": "compoventuals-demos",
  "version": "0.1.0",
  "description": "CRDTs designed compositionally (demo webapps)",
  "author": "Compoventuals contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/composablesys/compoventuals/issues"
  },
  "homepage": "https://github.com/composablesys/compoventuals#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/composablesys/compoventuals.git"
  },
  "keywords": [
    "crdts"
  ],
  "sideEffects": false,
  "dependencies": {
    "tslib": "^2.0.1",
    "compoventuals": "^0.1.0",
    "compoventuals-matrix-widget": "^0.1.0",
    "compoventuals-ws-client": "^0.1.0",
    "compoventuals-ws-server": "^0.1.0",
    "compoventuals-webrtc-client": "^0.1.0",
    "compoventuals-webrtc-server": "^0.1.0",
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "matrix-widget-api": "^0.1.0-beta.15",
    "quill": "^1.3.6",
    "pako": "^2.0.4",
    "protobufjs": "~6.9.0",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "mkdirp": "^1.0.4",
    "typescript": "^4.3.5",
    "copy-webpack-plugin": "^9.0.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "html-webpack-plugin": "^5.3.2",
    "html-loader": "^2.1.2",
    "css-loader": "^6.2.0",
    "style-loader": "^3.2.1",
    "react-dev-utils": "^11.0.4",
    "@types/react-dev-utils": "^9.0.8",
    "clean-webpack-plugin": "^3.0.0",
    "terser-webpack-plugin": "^5.1.4",
    "webpack-bundle-analyzer": "^4.4.2",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "ts-loader": "^9.2.5",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "pkg-ok": "^2.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^2.7.1",
    "@types/quill": "^2.0.8",
    "@types/express": "^4.17.7",
    "@types/jquery": "^3.5.5",
    "@types/pako": "^1.0.2",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.2",
    "@types/ws": "^7.2.6"
  },
  "scripts": {
    "start": "node build/server/demo_server.js",
    "build": "npm-run-all build:*",
    "build:site": "npm-run-all build:site:*",
    "build:site:protobuf": "npm-run-all build:site:protobuf:prepare build:site:protobuf:js build:site:protobuf:ts",
    "build:site:protobuf:prepare": "mkdirp generated/site",
    "build:site:protobuf:js": "pbjs -t static-module -w es6 -o generated/site/proto_compiled.js `find src/site -name '*.proto'`",
    "build:site:protobuf:ts": "pbts -o generated/site/proto_compiled.d.ts generated/site/proto_compiled.js",
    "build:site:webpack": "webpack",
    "build:server": "tsc --build tsconfig.server.json",
    "test": "npm-run-all test:*",
    "test:pkg": "pkg-ok",
    "test:format": "prettier --check .",
    "fix": "npm-run-all fix:*",
    "fix:format": "prettier --write .",
    "clean": "rimraf build generated"
  }
}
