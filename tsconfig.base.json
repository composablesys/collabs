{
  /* Base configuration for subprojects to extend. */
  "compilerOptions": {
    "target": "es2019",
    /* Library files to include in compilation */
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    /* Generate sourcemap files */
    "sourceMap": true,
    /* Enable strict type checking */
    "strict": true,
    /* Emit .d.ts files */
    "declaration": true,
    /* Enable importing across subprojects */
    "composite": true,
    /* Enable interop with dependencies using different module systems */
    "esModuleInterop": true,
    /* Use tslib to reduce file sizes: */
    "importHelpers": true
  }
}
